<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainActivity1">

    <!-- Toàn bộ nội dung app -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFB74D"
            android:backgroundTint="#FFB74D"
            app:title="😂 Custom Soundboard"
            app:titleTextColor="@android:color/white"
            android:elevation="6dp" />

        <!-- Khung fragment -->
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FDF9E6"
                    android:gravity="center_horizontal"
                    >

                    <!-- Tiêu đề -->
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎉 Welcome to 🎉"
                        android:fontFamily="casual"
                        android:textColor="#FF4081"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="28dp"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="😂 Custom Soundboard 😂"
                        android:textAlignment="center"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#3F51B5"
                        android:layout_marginTop="8dp"/>

                    <!-- Card Create -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:id="@+id/btnCreate"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/du_"
                                android:contentDescription="Create icon"
                                android:background="@drawable/bg_circle_white"
                                android:padding="8dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🚀 Tạo bảng âm thanh đầu tiên"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bắt đầu ngay và khám phá mọi tính năng cực vui nhộn 🎶"
                                    android:textColor="#555555"
                                    android:textSize="13sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Import -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:id="@+id/btnImport"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/sd"
                                android:contentDescription="Import icon"
                                android:background="@drawable/bg_circle_white"
                                android:padding="8dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="📥 Nhập bảng âm thanh có sẵn"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tải nhanh cấu hình vui nhộn chỉ với 1 chạm 😍"
                                    android:textColor="#555555"
                                    android:textSize="13sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Saved -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:id="@+id/btnSaved"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/folder"
                                android:contentDescription="Saved icon"
                                android:background="@drawable/bg_circle_white"
                                android:padding="8dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="📂 Mở bảng âm thanh đã lưu"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Khám phá lại những âm thanh bạn đã lưu 📂"
                                    android:textColor="#555555"
                                    android:textSize="13sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Pre -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:id="@+id/btnPre"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/thongkeremovebg"
                                android:contentDescription="Stats icon"
                                android:background="@drawable/bg_circle_white"
                                android:padding="8dp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="📊 Trang thống kê"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#000000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Theo dõi hoạt động vui nhộn và kết quả sử dụng 📈"
                                    android:textColor="#555555"
                                    android:textSize="13sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>
        <!-- === Bottom Navigation === -->
        <!--        <include-->
        <!--            android:id="@+id/bottom_navigation"-->
        <!--            layout="@layout/activity_bottom_navigation"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="60dp"-->
        <!--            android:layout_gravity="bottom"/>-->
        <!--        <com.google.android.material.bottomnavigation.BottomNavigationView-->
        <!--            android:id="@+id/bottom_navigation"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="60dp"-->
        <!--            android:layout_gravity="bottom"-->
        <!--            android:background="#FFFFFF"-->
        <!--            app:menu="@menu/bottom_menu"-->
        <!--            app:itemIconTint="@color/black"-->
        <!--            app:itemTextColor="@color/black"/>-->
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"
        app:headerLayout="@layout/activity_wave_header"/>
</androidx.drawerlayout.widget.DrawerLayout>
