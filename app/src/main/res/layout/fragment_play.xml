<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nội dung chính -->
    <LinearLayout
        android:id="@+id/containerSounds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDF9E6"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFB74D"
            app:title="🎶 Kho Prank Vui Vẻ 🤡"
            app:titleTextColor="@android:color/white"
            android:elevation="6dp"/>

        <!-- Nội dung cuộn -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Card hướng dẫn -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#FFF9C4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="💡 Tip: Nhấn ✨ Thêm chủ đề troll mới ✨ để tạo bộ sưu tập prank cực chất!"
                        android:textSize="14sp"
                        android:textColor="#616161" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Nút thêm -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:backgroundTint="#43A047"
                    android:text="✨ Thêm chủ đề troll mới ✨"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:cornerRadius="20dp" />

                <!-- Nút xóa -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#E53935"
                    android:text="🗑️ Xóa mấy cái prank này (chắc chưa? 😏)"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:cornerRadius="20dp" />

                <!-- GridLayout danh sách -->
                <GridLayout
                    android:id="@+id/layoutContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="2"
                        android:layout_gravity="fill_horizontal"
                        android:text="📂 Danh sách prank bá đạo:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:elevation="4dp" />
                </GridLayout>

                <!-- Footer -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="😂 Troll nhẹ thôi, đừng troll quá!"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"
        app:headerLayout="@layout/activity_wave_header" />
</androidx.drawerlayout.widget.DrawerLayout>
